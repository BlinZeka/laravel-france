.Forums_ChosenCategory {
  padding:3em;
  lost-position: middle-center;
  a {
    color: white;
  }
}

.Forums_TopicHeader {
  padding:1.5em;
  lost-position: middle-center;
  a {
    color: white;
  }

  text-align center;
}

.Forums__TopicHeader__Title--Solved:before {
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  font-family: FontAwesome
  margin-right .1rem;
  content: "\f00c";
}

.Forums__Content {
  margin-top: 2rem;
  lost-offset: -1 / 20
  lost-column: 15 / 20
}


.Forums__Paginator {
  margin-top 2rem;
  text-align center;
  &.Forums__Paginator--Right {
    float: right;
    text-align right;
  }
}


@import "./forums_sidebar"
@import "./forums_categorylabel"
@import "./forums_topiclist"
@import "./forums_messagelist"
@import './forums_searchbar'


.Forums--Fullpage {
  & .Forums__Content {
    lost-offset: 0
    lost-column: 1/1
  }
}




@media screen and (max-width: 980px) {

  .Forum--Sidebar {
    padding: 1rem;
  }



  .Forums__Sidebar {
    lost-column: 1
  }

  .Forums__Content {
    margin-top: 2rem;
    lost-offset: 0
    lost-column: 1
  }
  
  .Forums__TopicList__Item__Avatar, .Forums__TopicList__Item__NbReplies, .Forums__MessageList__Message__Side {
    display: none;
  }

  .Forums__TopicList__Item__Content, .Forums__MessageList__Message__Content {
    lost-column: 1;
  }
}

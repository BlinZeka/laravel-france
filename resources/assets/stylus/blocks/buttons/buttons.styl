.Button {
  buttonLike()

  line-height: 20px;
  padding: 8px 13px;
  border: 1px solid $lightgrey;
  &:focus {
    outline 1px solid $lightgrey;
  }
}

.Button--Submit{
  background-color: $orange;
  color: $white;
  text-decoration none;
  border-color  1px solid darken($orange, 15%);
  &:focus {
    outline 1px solid darken($orange, 15%);
  }
}

.Button--Cancel{
  background-color: $white;
  color: $black;
  text-decoration none;
}



.Button--NewTopic {
  width 100%;
  background-color: $orange;
  color: $white;
  text-decoration none;
  font-weight bold;
  font-size 1.1rem;
}


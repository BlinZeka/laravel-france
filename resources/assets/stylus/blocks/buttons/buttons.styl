.Button {
  buttonLike()

  line-height: 1.4rem;
  padding: .6rem 1rem;
  border: 1px solid $lightgrey;
  &:focus {
    outline 1px solid $lightgrey;
  }
}

.Button--Small {
  line-height: 1rem;
  padding: .3rem .7rem;
  font-size .8rem;
}

.Button--Submit{
  background-color: $orange;
  color: $white;
  text-decoration none;
  border-color  1px solid darken($orange, 15%);
  &:focus {
    outline 1px solid darken($orange, 15%);
  }
}

.Button--Cancel{
  background-color: $white;
  color: $black;
  text-decoration none;
}



.Button--NewTopic {
  width 100%;
  background-color: $orange;
  color: $white;
  text-decoration none;
  font-weight bold;
  font-size 1.1rem;
}

